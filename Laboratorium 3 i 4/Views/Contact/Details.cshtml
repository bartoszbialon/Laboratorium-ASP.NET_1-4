@model Contact
@{
    ViewData["Title"] = "Szczegóły Kontaktu";
}

<h2>Szczegóły kontaktu</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Id:</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Imię:</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Birth:</dt>
        <dd class="col-sm-10">@Model.Birth</dd>
        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Priority</dd>
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.Created</dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="Index" asp-controller="Contact" class="btn btn-primary">Powrót do listy</a>
</div>