@model Contact

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Usuwanie Kontaktu";
}

<h2>Usuwanie kontaktu</h2>
<form asp-action="Delete" asp-controller="Contact" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Czy na pewno chcesz usunąć kontakt: @Model.Name?</p>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" asp-controller="Contact" class="btn btn-secondary">Anuluj</a>
    </div>
</form>